{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true
}